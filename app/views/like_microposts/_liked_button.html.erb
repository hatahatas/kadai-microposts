<% if current_user.likes?(micropost) %>

<%= form_for(current_user.like_microposts.find_by(micropost_id: micropost.id),html:{method: :delete}) do |f| %>

<%= hidden_field_tag :micropost_id, micropost.id %>

<%= f.submit 'Unliked', class:'btn btn-danger btn-block' %>

<% end %>

<% else %>

<%= form_for(current_user.like_microposts.build) do |f| %>

<%= hidden_field_tag :micropost_id, micropost.id %>

<%= f.submit 'Liked', class: 'btn btn-primary btn-block' %>



<% end %>

<% end %>